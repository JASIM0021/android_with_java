<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-6dp"
    tools:layout_editor_absoluteY="103dp">

    <TextView
        android:id="@+id/anim_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Animation"
        android:textColor="#0027FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_scale"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Scale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_alpha"
        android:layout_width="145dp"
        android:layout_height="71dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp"
        android:text="Alpha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_translate"
        android:layout_width="141dp"
        android:layout_height="67dp"
        android:layout_marginBottom="50dp"
        android:text="TRANSLATE"
        app:layout_constraintBottom_toTopOf="@+id/btn_alpha"
        app:layout_constraintEnd_toEndOf="@+id/btn_alpha"
        app:layout_constraintStart_toStartOf="@+id/btn_alpha" />

    <Button
        android:id="@+id/btn_rotate"
        android:layout_width="123dp"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:text="Rotate"
        app:layout_constraintBottom_toTopOf="@+id/btn_scale"
        app:layout_constraintEnd_toEndOf="@+id/btn_scale"
        app:layout_constraintStart_toStartOf="@+id/btn_scale" />
</androidx.constraintlayout.widget.ConstraintLayout>